.content {
  text-align: center;
}

/* 头像view */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: deepskyblue;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 头像图片 */

.user_headIcon {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/* 登陆图片 */

.user_Icon {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/* 账号密码view */

.input_log {
  display: flex;
  border-bottom: 1px solid #ddd;
  flex-direction: row;
}

.input_area {
  background-color: #fff;
  text-align: left;
  border-top: 1px solid #ddd;
}

.input_area input {
  height: 100rpx;
  line-height: 100rpx;
}

/* 按钮 */

.btn_area {
  width: 80%;
  margin: 0 auto;
}

.btn_area button {
  margin-top: 40rpx;
  color: #fff;
  background-color:  deepskyblue;
}

.txt_area {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.forgot-password {
  color: #888;
}

.txt_area {
  color: skyblue;
}
